	prompt "Customer Parameter"
	depends on RTK_KDRV_EMCU
	default TV001_PLATFORM
	---help---
	  Select layout of share memory for customer

config TV001_PLATFORM
	bool "EMCU_TV001"
	---help---
	  for TV001 platform

config TV030_PLATFORM
	bool "EMCU_TV030"
	---help---
	  for TV030 platform

endchoice

